<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlertActivity">


    <ListView
        android:id="@+id/listaAlerta"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/atualizaAlerta"
        tools:layout_editor_absoluteX="8dp">

    </ListView>

    <Button
        android:id="@+id/atualizaAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Spinner
        android:id="@+id/spinnerAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/atualizaAlerta"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/clearPosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Clear alerts"
        app:layout_constraintStart_toEndOf="@+id/spinnerAlert"
        tools:layout_editor_absoluteY="6dp" />


</android.support.constraint.ConstraintLayout>